<head>
<title>ﾒｯｾｰｼﾞ作成</title>
</head>

<body>
<button class='btn encode_btn'>入力フォーム追加</button>
<%=form_with url:new_encoders_path,local: true, method: :post,class:'encode_form' do |f| %>
  <p><%= f.submit 'QRコード作成'%></p>
  <%= f.text_field :text, name: "text[]",class:'encode_text' %>
<%end%>

<table>
  <thead>
    <th>情報</th>
    <th>画像</th>
  </thead>
  <tbody>
  <% @qrcodes.each do |qrcode|%>
    <tr>
      <td><%= qrcode[:content]%></td>
      <td><%= image_tag (qrcode[:qr]), size: '100x100' %></td>
    </tr>
  <%end%>
  </tbody>
</body>