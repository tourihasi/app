      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "from google.colab import files\n",
        "import re  # 正規表現モジュールをインポート\n",
        "\n",
        "# XMLデータのアップロード\n",
        "print(\"修正元のXMLデータファイルをアップロードしてください。\")\n",
        "uploaded_xml = files.upload()\n",
        "\n",
        "# アップロードされたXMLデータを読み込む\n",
        "for xml_file_name in uploaded_xml.keys():\n",
        "    with open(xml_file_name, 'r', encoding='utf-8') as file:\n",
        "        xml_data = file.read()\n",
        "\n",
        "# エクセルファイルのアップロード\n",
        "print(\"置換表のExcelファイルをアップロードしてください。\")\n",
        "uploaded_excel = files.upload()\n",
        "\n",
        "# アップロードされたExcelファイル名を取得\n",
        "for excel_file_name in uploaded_excel.keys():\n",
        "    excel_path = excel_file_name  # アップロードされたファイル名を取得\n",
        "\n",
        "# Excelファイルから特定のシート「★部屋名」を読み込む\n",
        "sheet_name = \"★部屋名\"\n",
        "try:\n",
        "    df = pd.read_excel(excel_path, sheet_name=sheet_name, header=0)  # 1行目を見出しとして読み込み\n",
        "except ValueError:\n",
        "    print(f\"シート名「{sheet_name}」が見つかりませんでした。シート名を確認してください。\")\n",
        "    raise\n",
        "\n",
        "# 2行目以降を取得\n",
        "df = df.iloc[1:]  # 2行目以降を取得\n",
        "\n",
        "# 列名の確認\n",
        "print(\"読み込んだExcelファイルの列名:\", df.columns.tolist())\n",
        "\n",
        "# 列名が正しいか確認\n",
        "if 'A' not in df.columns or 'B' not in df.columns:\n",
        "    print(\"Excelファイルの列名が期待通りではありません。以下のいずれかを確認してください：\")\n",
        "    print(\"1. 列名が 'A' と 'B' であること。\")\n",
        "    print(\"2. 最初の行が列名として正しく設定されていること。\")\n",
        "    raise KeyError(\"列名が 'A' または 'B' ではありません。正しい列名を確認してください。\")\n",
        "\n",
        "# A列がold_value、B列がnew_value\n",
        "for old_value, new_value in zip(df['A'], df['B']):\n",
        "    if pd.notna(old_value) and pd.notna(new_value):  # 値がNaNではない場合にのみ処理\n",
        "        old_value_str = str(old_value).strip()  # A列の値を文字列化し前後の空白を除去\n",
        "        new_value_str = str(new_value).strip()  # B列の値を文字列化し前後の空白を除去\n",
        "\n",
        "        # spaceIdRef の置換\n",
        "        xml_data = xml_data.replace(f'spaceIdRef=\"{old_value_str}\"', f'spaceIdRef=\"{new_value_str}\"')\n",
        "\n",
        "        # id の置換\n",
        "        xml_data = xml_data.replace(f'id=\"{old_value_str}\"', f'id=\"{new_value_str}\"')\n",
        "\n",
        "        # surfaceIdRef の置換\n",
        "        xml_data = xml_data.replace(f'surfaceIdRef=\"{old_value_str}\"', f'surfaceIdRef=\"{new_value_str}\"')\n",
        "\n",
        "# surfaceType=\"Air\" を含む Surface タグを削除（他のsurfaceTypeは削除しない）\n",
        "pattern_air_surface = r'<Surface\\s+[^>]*surfaceType=\"Air\"[^>]*>.*?</Surface>'\n",
        "xml_data = re.sub(pattern_air_surface, '', xml_data, flags=re.DOTALL)\n",
        "\n",
        "# 結果の保存と確認\n",
        "output_file_name = \"modified_xml_data_with_surface_removed.xml\"\n",
        "with open(output_file_name, 'w', encoding='utf-8') as file:\n",
        "    file.write(xml_data)\n",
        "\n",
        "print(\"置換および Surface タグの削除後のXMLデータをファイルに保存しました。\")\n",
        "print(f\"保存ファイル名: {output_file_name}\")\n",
        "\n"
      ],
